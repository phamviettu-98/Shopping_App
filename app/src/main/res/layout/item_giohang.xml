<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="150dp"
     android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="12"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="120dp">


    <ImageView
        android:id="@+id/gh_img"
        android:layout_weight="2"
        android:src="@drawable/laptop"
        android:layout_width="40dp"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/gh_tensp"
        android:layout_weight="2"
        android:text="Ten San pham"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="80dp"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/gh_dongia"
        android:layout_weight="2"
        android:text="Don gia"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="120dp"/>
    <Button
        android:id="@+id/gh_btntru"
        android:layout_weight="1"
        android:text="-"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textSize="16sp"
        android:layout_width="35dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/gh_soluong"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_width="30dp"
        android:layout_height="120dp"/>
    <Button
        android:id="@+id/gh_btncong"
        android:layout_weight="1"
        android:textSize="16dp"
        android:text="+"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="38dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/gh_tong"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Tong tien"
        android:layout_width="85dp"
        android:layout_height="120dp"/>
    <ImageView
        android:id="@+id/gioahang_xoa"
        android:src="@drawable/ic_baseline_delete_forever_24"
        android:layout_width="25dp"
         android:layout_height="90dp"/>
    </LinearLayout>
    <TextView
        android:background="#f000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>





</LinearLayout>